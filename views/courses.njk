{% extends "layout.njk" %}

    {% block content %}
        <main>
            <h1>Principais cursos da Rocketseat</h1>
            <section class="cards">

                {% for item in items %}
                <div class="card" id="{{item.courseName}}">
                    <div class="card_image-container">
                        <img src="https://skylab.rocketseat.com.br/static/{{item.id}}.svg" alt="imagem do curso">
                    </div>
                    <div class="card_info">
                        <span>MÃ³dulo {{item.module}}</span>
                        <span class="card_price">{{item.price}}</span>
                    </div>
                </div>
                {% endfor %}
            </section>
        </main>

        <div class="modal-overlay">
            <div class="modal">
                <a class="close-modal">
                    <i class="material-icons">close</i>
                </a>
                <a class="maximize-modal">
                    <i class="material-icons">crop_3_2</i>
                </a>
                

                <div class="modal-content">
                    <iframe src="" frameborder="0"></iframe>
                </div>
            </div>
        </div>
        
    {% endblock  %}   